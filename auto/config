#!/bin/sh

set -e

# Enable all repositories and backports (for zfs).
lb config noauto \
	--architectures amd64 \
	--system live \
	--updates true \
	--backports true \
	--security true \
    --apt-recommends false \
	--win32-loader false \
	--archive-areas "main contrib non-free" \
	--debian-installer live \
	--bootappend-live "boot=live components hostname=sctech" \
	--linux-packages "linux-image linux-headers" \
	--memtest none \
    --initramfs live-boot \
	--mirror-binary http://mirrors.dotsrc.org/debian/ \
	--mirror-bootstrap http://mirrors.dotsrc.org/debian/ \
    --image-name "SC-Kiosk085" \
    --clean \
	"$@"
